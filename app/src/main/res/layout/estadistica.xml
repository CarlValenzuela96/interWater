<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:background="#fcfcfc"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView

                android:id="@+id/cardvEstadistica"
                android:layout_width="330dp"
                android:layout_height="420dp"
                android:layout_margin="10dp"
                android:clickable="false"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/plomo">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top|center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:text="ESTADÍSTICA"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:textSize="24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:text="Año estadística"
                        android:gravity="center"
                        android:textStyle="normal"
                        android:textColor="@color/colorAccent"
                        android:textSize="20dp"/>

                    <Spinner
                        android:layout_width="250dp"
                        android:layout_height="35dp"
                        android:id="@+id/seleccionAños"
                        android:layout_marginTop="15dp"
                        android:entries="@array/años"
                        android:textAlignment="center"
                        android:background="@drawable/spinner_personalizado"
                        android:spinnerMode="dialog"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Mes estadística"
                        android:gravity="center"
                        android:textStyle="normal"
                        android:textColor="@color/colorAccent"
                        android:textSize="20dp"/>

                    <Spinner
                        android:layout_width="250dp"
                        android:layout_height="35dp"
                        android:id="@+id/seleccionMeses"
                        android:layout_marginTop="15dp"
                        android:entries="@array/meses"
                        android:textAlignment="center"
                        android:background="@drawable/spinner_personalizado"
                        android:spinnerMode="dialog"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="130dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            style="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon"
                            android:layout_width="120dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="10dp"
                            android:drawableStart="@drawable/round_bar_chart_white_24dp"
                            android:text="Gráfico"
                            android:textSize="18dp" />

                        <Button
                            style="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon"
                            android:layout_width="120dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="30dp"
                            android:drawableStart="@drawable/round_insert_drive_file_white_24dp"
                            android:text="Reporte"
                            android:textSize="18dp" />
                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>


    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
