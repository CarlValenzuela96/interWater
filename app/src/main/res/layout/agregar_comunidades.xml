<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:background="#fcfcfc"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView

                android:id="@+id/addComunidad"
                android:layout_width="330dp"
                android:layout_height="420dp"
                android:layout_margin="10dp"
                android:clickable="false"
                android:foreground="?android:attr/selectableItemBackground"
                android:backgroundTint="@color/plomo">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top|center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:text="AGREGAR COMUNIDAD"
                        android:id="@+id/textViewCantAguaDist"
                        android:gravity="center"
                        android:textStyle="normal"
                        android:textSize="24dp"/>

                    <android.support.design.widget.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:id="@+id/contenedorNombre"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.507"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.498">

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nombre comunidad"
                            android:id="@+id/nombreComunidad"
                            android:inputType="textShortMessage"
                            android:textSize="15sp"/>
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Carga de nomina"
                        android:id="@+id/textViewCantAguaFalt"
                        android:gravity="center"
                        android:textStyle="normal"
                        android:textSize="20dp"/>

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="Examinar"
                        android:layout_marginTop="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Datos cargados exitosamente!!"
                        android:id="@+id/textViewCargaNomina"
                        android:gravity="center"
                        android:textColor="@color/plomoOscuro"
                        android:textSize="15dp"/>

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:text="Guardar"
                        android:layout_marginTop="30dp"
                        android:textSize="20dp"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>


    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
