<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="24dp"
        android:text="REPORTE"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|left"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Año estadística:"
            android:layout_marginLeft="20dp"
            android:textStyle="normal"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/reporte_año"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:hint="Fecha"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|left"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Mes estadística:"
            android:layout_marginLeft="20dp"
            android:textStyle="normal"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/reporte_mes"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:hint="Mes"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|left"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Total mes:"
            android:layout_marginLeft="20dp"
            android:textStyle="normal"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/reporte_Total_Mes"
            android:textSize="20dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:hint="Total"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/comunidad_list_total_reporte"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:layout_marginLeft="20dp">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top|center">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="15dp"
            android:background="@color/colorPrimary" />

        <Button
            android:id="@+id/guardar_reporte_button"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Guardar"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon"
            android:textSize="20dp"/>

    </LinearLayout>

</LinearLayout>
